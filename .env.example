# Fail Frenzy Platform - Environment Variables Configuration
# Copy this file to .env and fill in your values

# ============================================
# REQUIRED - Server will not start without these
# ============================================

# Database connection URL (MySQL)
# Example: mysql://user:password@host:port/database
DATABASE_URL=

# Secret key for JWT token signing (minimum 32 characters recommended)
# Generate with: openssl rand -base64 32
JWT_SECRET=


# ============================================
# IMPORTANT - Required for full functionality
# ============================================

# OAuth Server Configuration (for Manus authentication)
OAUTH_SERVER_URL=https://api.manus.im
VITE_APP_ID=
OWNER_OPEN_ID=

# Stripe Payment Configuration
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...


# ============================================
# OPTIONAL - Additional features
# ============================================

# Node Environment
NODE_ENV=production

# Server Port
PORT=3000

# CORS Origins (comma-separated list of allowed origins)
# Example: https://yourdomain.com,https://app.yourdomain.com
CORS_ORIGINS=*

# Built-in Forge API (Manus platform features)
BUILT_IN_FORGE_API_URL=https://forge.manus.im
BUILT_IN_FORGE_API_KEY=


# ============================================
# FRONTEND (for local development)
# ============================================

# Frontend-specific OAuth configuration
VITE_OAUTH_PORTAL_URL=https://portal.manus.im

# Stripe Publishable Key (frontend)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_...

# API URL (for frontend to connect to backend)
VITE_API_URL=http://localhost:3000

# Analytics (optional)
VITE_ANALYTICS_WEBSITE_ID=
VITE_ANALYTICS_ENDPOINT=

# Frontend Forge API (optional)
VITE_FRONTEND_FORGE_API_KEY=
VITE_FRONTEND_FORGE_API_URL=https://forge.manus.im
